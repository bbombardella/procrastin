{
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "noEmit": true,
    "module": "NodeNext",
    "strict": true,
    "strictNullChecks": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@procrastin/contract": ["../../packages/contract/src"],
      "@procrastin/prisma": ["../../packages/prisma/src"]
    }
  },
  "include": [
    "src/**/*", 
    "*.ts",
    // global
    "../../types/**/*",
    // packages
    "../../packages/contract/src/**/*",
    "../../packages/prisma/src/**/*"
  ],
  "references": []
}